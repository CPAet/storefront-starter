<%= partial('html') %>
<head>
  <%= partial('head') %>
</head>
<%= partial('body') %>
  <%= partial('organisms/header') %>

  <main class="main">
    <div class="container py-1 py-sm-2 py-lg-4">
      <div class="_ecom-el" data-type="product" data-current="true">
        <nav class="d-none d-md-block" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/">
                <i class="fas fa-home"></i>
              </a>
            </li>
            <li
              class="breadcrumb-item"
              v-if="splitCategoryTree().length"
              v-for="category in splitCategoryTree()">
              <a v-bind:href="'/' + category.slug">{{ name(category) }}</a>
            </li>
            <li
              class="breadcrumb-item"
              v-elseif="body.categories && body.categories.length">
              <a v-bind:href="'/' + body.categories[0].slug">{{ name(body.categories[0]) }}</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              {{ name() }}
            </li>
          </ol>
        </nav>

        <section class="row product">
          <div class="col col-lg-5" v-if="body.pictures && body.pictures.length">
            <div class="glide">
              <div class="glide__track product__stage" data-glide-el="track">
                <ul class="glide__slides">
                  <li class="glide__slide" v-for="(picture, index) in body.pictures">
                    <a href="#" class="d-block">
                      <img
                        class="lozad-ecom fade img-fluid"
                        v-bind:data-src="picture.zoom.url"
                        v-bind:alt="picture.zoom.alt" />
                    </a>
                  </li>
                </ul>
                <div class="glide__arrows glide__arrows--outer" data-glide-el="controls">
                  <button
                    class="glide__arrow glide__arrow--left"
                    data-glide-dir="<">
                    <i class="fas fa-chevron-left"></i>
                  </button>
                  <button
                    class="glide__arrow glide__arrow--right"
                    data-glide-dir=">">
                    <i class="fas fa-chevron-right"></i>
                  </button>
                </div>
              </div>
              <!--
              <div class="product__thumbs d-flex" data-glide-el="controls[nav]">
                <a
                  class="d-block"
                  v-for="(picture, index) in body.pictures"
                  href="javascript:;"
                  v-bind:data-glide-dir="'=' + index">
                  <img
                    class="img-fluid"
                    v-bind:src="picture.small.url"
                    v-bind:alt="picture.small.alt" />
                </a>
              </div>
              -->
            </div>
          </div>
          <div class="col">
          </div>
        </section>
      </div>
    </div>
  </main>

  <%= partial('organisms/footer') %>
</body>
</html>
