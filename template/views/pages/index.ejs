<%= include('html') %>
<head>
  <%= include('head', { title: pages.home.title }) %>
</head>
<%= include('body') %>
  <%= include('components/header') %>

  <main>
    <!-- Banner carousel -->
    <section>
      <ul id="hero-slider" class="hero-slider">
        <li class="hero-slider__item">
          <a href="#" class="d-block">
            <img
              class="lozad img-fluid"
              data-src="/img/uploads/lauren-fleischmann-469994-unsplash.jpg"
              data-after-loaded="HeroSlider(0)" />
          </a>
        </li>
        <li class="hero-slider__item">
          <a href="#" class="d-block">
            <img
              class="lozad img-fluid"
              data-src="/img/uploads/andrew-tanglao-505288-unsplash.jpg"
              data-after-loaded="HeroSlider(1)" />
          </a>
        </li>
      </ul>
    </section>

    <div class="container">
    </div>
  </main>

  <%= include('components/footer') %>

  <!-- Netlify Identity for CMS -->
  <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script defer>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", function (user) {
        if (!user) {
          window.netlifyIdentity.on("login", function () {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
