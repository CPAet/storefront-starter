<%= partial('html') %>
<head>
  <%= partial('head') %>
</head>
<%= partial('body') %>
  <%= partial('organisms/header') %>

  <main class="main" id="__main">
    <div class="container brand py-1 py-sm-2 py-lg-4">
      <div class="_ecom-el" data-type="brand" data-current="true">
        <nav class="d-none d-md-block" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/">
                <i class="fas fa-home"></i>
              </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              {{ name() }}
            </li>
          </ol>
        </nav>

        <section
          v-if="body.pictures && body.pictures.length"
          class="brand__banner">
          <img
            class="img-fluid"
            v-bind:src="body.pictures[0].url"
            v-bind:alt="body.pictures[0].alt" />
        </section>
      </div>

      <div class="_ecom-el" data-type="brand" data-search-by="brands">
        <section class="brand__description my-5" v-if="body.body_html">
          <div v-html="body.body_html" class="wysiwyg-content"></div>
        </section>
      </div>
    </div>
  </main>

  <%= partial('organisms/footer') %>
</body>
</html>
