{
  "private": true,
  "name": "@ecomplus/storefront",
  "version": "1.0.0-alpha.3",
  "description": "PWA and JAMstack based e-commerce template for E-Com Plus stores",
  "main": "template/js/index.js",
  "jsdelivr": "dist/storefront.js",
  "unpkg": "dist/storefront.js",
  "scripts": {
    "template": "storefront-tmpl && storefront-tmpl-styles",
    "pack": "npm run template && storefront-pack",
    "serve": "ECOMCLIENT_NOTIMEOUT=true npm run pack serve",
    "build": "ECOMCLIENT_NOTIMEOUT=true npm run pack build",
    "release": "npm run build && standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomclub/storefront.git"
  },
  "keywords": [
    "ecomplus",
    "storefront",
    "jamstack-ecommerce",
    "pwa-ecommerce",
    "ecommerce-template",
    "ecommerce-theme",
    "pwa-boilerplate",
    "ecommerce-boilerplate",
    "store-theme"
  ],
  "author": "E-Com Club <ti@e-com.club>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecomclub/storefront/issues"
  },
  "homepage": "https://github.com/ecomclub/storefront#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@ecomplus/client": "^1.1.3",
    "@ecomplus/search-engine": "^1.0.2",
    "@ecomplus/storefront-framework": "^5.1.1",
    "@ecomplus/storefront-template": "^1.0.0",
    "@ecomplus/storefront-twbs": "^3.4.0",
    "@ecomplus/utils": "^1.0.1",
    "@ecomplus/widget-product": "^0.3.8",
    "@ecomplus/widget-product-card": "^0.2.4",
    "@ecomplus/widget-user": "^0.9.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.22",
    "@fortawesome/free-brands-svg-icons": "^5.10.2",
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "@glidejs/glide": "^3.3.0",
    "babel-eslint": "^10.0.3",
    "bootswatch": "^4.3.1",
    "core-js": "^3.2.1",
    "ejs": "^2.7.1",
    "eventemitter3": "^4.0.0",
    "husky": "^3.0.5",
    "lozad": "^1.9.0",
    "photoswipe": "^4.1.3",
    "slideout": "^1.0.1",
    "standard": "^14.1.0",
    "standard-version": "^7.0.0",
    "vue": "^2.6.10"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    "last 1 version",
    "not dead",
    "> 0.2%"
  ],
  "standard": {
    "parser": "babel-eslint"
  }
}
